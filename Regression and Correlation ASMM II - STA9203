        "\n",
        "def add_slide(title, content):\n",
        "    slide = prs.slides.add_slide(content_slide_layout)\n",
        "    slide.shapes.title.text = title\n",
        "    slide.placeholders[1].text = content\n",
        "    return slide\n",
        "\n",
        "slides_data = [\n",
        "    (\"Lesson Overview\",\n",
        "     \"Week 4\\nDuration 3 hours\\nTopic Regression and Correlation Part I\\n\"\n",
        "     \"Core areas simple regression least squares normal regression\\nMethod lecture and coding lab\"),\n",
        "\n",
        "    (\"Learning Objectives\",\n",
        "     \"At the end of the lesson students should be able to explain simple regression\\n\"\n",
        "     \"Describe least squares\\nRecognise model assumptions\\nFit a model in STATA or SPSS\"),\n",
        "\n",
        "    (\"Why Regression Matters\",\n",
        "     \"Helps describe relationships\\nSupports prediction\\nApplied in health economics and social sciences\\n\"\n",
        "     \"Forms foundation for advanced modeling\"),\n",
        "\n",
        "    (\"Intro to Simple Linear Regression\",\n",
        "     \"Model Y = b0 + b1X + error\\nX is predictor Y is outcome\\n\"\n",
        "     \"Goal is to estimate b0 and b1\"),\n",
        "\n",
        "    (\"Meaning of b0 and b1\",\n",
        "     \"b0 is predicted Y when X is zero\\n\"\n",
        "     \"b1 is change in Y when X increases by one\\n\"\n",
        "     \"Sign of b1 shows direction of relationship\"),\n",
        "\n",
        "    (\"Error Term and Variability\",\n",
        "     \"Residuals are unexplained variation\\nLeast squares reduces total squared error\"),\n",
        "\n",
        "    (\"Least Squares Method\",\n",
        "     \"Estimates best fitting line\\nMinimises sum of squared residuals\"),\n",
        "\n",
        "    (\"Normal Regression Framework\",\n",
        "     \"Assumes errors follow normal pattern\\nSupports inference with t tests and confidence intervals\"),\n",
        "\n",
        "    (\"Regression Assumptions\",\n",
        "     \"Linearity\\nIndependence\\nConstant variance\\nNormality\"),\n",
        "\n",
        "    (\"Checking Model Assumptions\",\n",
        "     \"Residual plot\\nHistogram of residuals\\nTest for normality\"),\n",
        "\n",
        "    (\"Interpreting Regression Output\",\n",
        "     \"Coefficients\\nStandard error\\nT value\\nP value\"),\n",
        "\n",
        "    (\"Correlation\",\n",
        "     \"Strength and direction of linear association\\nRange negative one to one\"),\n",
        "\n",
        "    (\"Regression vs Correlation\",\n",
        "     \"Regression predicts Y from X while correlation only measures association\"),\n",
        "\n",
        "    (\"Coding Lab Session\",\n",
        "     \"Load dataset\\nRun regression\\nInterpret results\"),\n",
        "\n",
        "    (\"Take Home Assignment\",\n",
        "     \"Fit regression using dataset\\nCheck assumptions\\nInterpret coefficients\"),\n",
        "\n",
        "    (\"Next Week Preview\",\n",
        "     \"Multiple regression\\nVariable selection\\nDiagnostics\")\n",
        "]\n",
        "\n",
        "for title, content in slides_data:\n",
        "    add_slide(title, content)\n",
        "\n",
        "# --------------------------\n",
        "# Slide with Table\n",
        "# --------------------------\n",
        "slide = add_slide(\"Sample Regression Table\", \"This table shows X and Y values used in class.\")\n",
