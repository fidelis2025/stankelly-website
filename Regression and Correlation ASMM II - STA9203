        "title_slide_layout = prs.slide_layouts[0]\n",
        "content_slide_layout = prs.slide_layouts[1]\n",
        "\n",
        "slide = prs.slides.add_slide(title_slide_layout)\n",
        "slide.shapes.title.text = \"Week 4: Regression and Correlation Part I\"\n",
